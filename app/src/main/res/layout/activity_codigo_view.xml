<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#EAE8D8"
    android:layout_height="match_parent"
    tools:context=".View.CodigoView">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="341dp"
        android:layout_height="31dp"
        android:text="Ingresa el código de emergencia"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="140dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/textView"
            android:layout_width="37dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/style_border_editext"
            android:backgroundTint="#CEC6B5"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="number"
            android:maxLength="1" />  <!-- Limiter a un solo dígito -->

        <EditText
            android:id="@+id/textView3"
            android:layout_width="37dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/style_border_editext"
            android:backgroundTint="#CEC6B5"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/textView4"
            android:layout_width="37dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/style_border_editext"
            android:backgroundTint="#CEC6B5"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/textView5"
            android:layout_width="37dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/style_border_editext"
            android:backgroundTint="#CEC6B5"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/textView6"
            android:layout_width="37dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/style_border_editext"
            android:backgroundTint="#CEC6B5"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/textView7"
            android:layout_width="37dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/style_border_editext"
            android:backgroundTint="#CEC6B5"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="number"
            android:maxLength="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:text="Ingrese un código de 6 dígitos para activar el modo emergencia. Sólo debes usar este código si estás en peligro."
        android:textColor="#D9563333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />



    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:backgroundTint="#CEC6B5"
        android:text="Confirmar"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:indeterminate="true"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>

